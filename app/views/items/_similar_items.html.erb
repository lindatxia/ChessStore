<% unless @similar_items.empty? %>
  <div class="panel clearfix">
    <h3 class="heading">Similar Items</h3>

<div class="row">
	<% @similar_items.each do |item| %>
    
    	<div class="col s4 m4">
    		<div class="card">
    			<div class="card-image">
    				<%= image_tag('img_not_available.png', border:0)%>
        		</div>
	        	<div class="card-content">

	        	<h5 class="heading"> 
	        		<%= link_to item.name, item_path(item) %>
	        	</h5>

	          	<p class="text">
	          		<%= item.current_price.nil? ? "N/A" : number_to_currency(item.current_price) %>
	          	</p>
	       		</div>
      		</div>
    	</div>
  
  <% end %>
</div>



    <ul class="text">
      <% @similar_items.each do |item| %>
        <li><%= link_to item.name, item_path(item) %></li>
      <% end %>
    </ul>
  </div>
<% end %>