<div class="row">
  <div class="col s2">
  </div>
  <div class="col s10">

  	<h4 class="heading"> A&M Chess Schools </h4>

  	<button class="waves-effect waves-light btn acc">
        <%= link_to "Create School", new_school_path %> 
    </button>

	  <ul class="tabs">
	        <li class="tab col s3"><a class="active" href="#active">Active Schools</a></li>
	        <li class="tab col s3"><a href="#inactive">Inactive Schools</a></li>    
	  </ul>

	  <br/>

	  <div id="active" class="col s12">
	  	<%= render partial: 'active_schools', locals: {school: @active_schools} %>
	  </div>

	  <div id="inactive" class="col s12">
	  	<%= render partial: 'active_schools', locals: {school: @inactive_schools} %>
	  </div>

  </div>

</div>