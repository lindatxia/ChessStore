<%= simple_form_for @school, :html => { :class => 'form-horizontal' } do |f| %>
  <fieldset>
  
    <legend><%= controller.action_name.capitalize %> School </legend>

    
      <%= f.input :name %> 
      
      <%= f.input :street_1 %> 

      <%= f.input :street_2 %> 

      <%= f.input :zip %> 

      <%= f.input :state %> 

      <%= f.input :city %> 

      <%= f.input :min_grade %> 

      <%= f.input :max_grade %> 


    <div class="form-actions">
      <%= f.submit nil, :class => 'button radius' %>
      <%= link_to 'Cancel',schools_path, :class => 'button alert radius' %>
    </div>

  </fieldset>
<% end %>
