
<% if logged_in? %>

	<!-- Dropdown Structure -->
	<ul id="dropdown_profile" class="dropdown-content">

		<li>
			<%= link_to "Your Profile", user_path(current_user) %>
		</li>

		<li>
			<%= link_to "Edit settings", edit_user_path(current_user) %>
		</li>

		<li> 
			<%= link_to "Logout", logout_path %> 
		</li>
	</ul>

	<nav> 
		<div class="nav-wrapper">

			<ul class="right hide-on-med-and-down">
				<li><%= link_to add_to_cart_path(1) do %> 
					<i class="small material-icons prefix left">shopping_cart</i> Cart (<%= @cart_count%>)
					<%end%>
				</li>

				<li><a class="dropdown-button" href="#!" data-activates="dropdown_profile">Welcome, <%= current_user.first_name%> <i class="material-icons right">arrow_drop_down</i></a></li>

			</ul>


		</div>
	</nav>



<% else %>
    <%= link_to 'Login', login_path %>
           
<% end %> 



       