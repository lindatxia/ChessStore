
<% if logged_in? %>

	<!-- Dropdown Structure -->
	<ul id="dropdown_profile" class="dropdown-content">

		<li>
			<%= link_to "Your Profile", user_path(current_user) %>
		</li>

		<li>
			<%= link_to "Edit settings", edit_user_path(current_user) %>
		</li>

		<li> 
			<%= link_to "Logout", logout_path %> 
		</li>
	</ul>

	<nav> 
		<div class="nav-wrapper">

			<ul class="right hide-on-med-and-down">

				<% if logged_in? && current_user.role == "customer" %> 

					<li> 
						<%= link_to "My Orders", orders_path%>
					</li>

				<% end %> 

				<li><%= link_to cart_path do %> 
					<i class="small material-icons prefix left">shopping_cart</i> Cart&nbsp;&nbsp; 
					<% if @cart.size > 0 %> 
						<span class="new badge" data-badge-caption=""><%= @cart.size %></span>
					<% end %>
					<%end%>
				</li>

				<li><a class="dropdown-button" href="#!" data-activates="dropdown_profile">Welcome, <%= current_user.first_name%> <i class="material-icons right">arrow_drop_down</i></a></li>

			</ul>


		</div>
	</nav>



<% else %>
    <%= link_to 'Login', login_path %>
           
<% end %> 



       