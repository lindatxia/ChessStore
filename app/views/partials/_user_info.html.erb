<div class="row">
  <div class="col s2">
  </div>
  <div class="col s7">

    <h3 class="heading"> <%= @user.first_name%> <%=@user.last_name%></h3>

    <h4 class="text">Account Details</h4>

    <div class="user_photo"> 
      <% if @user.picture? %> 
        <%= image_tag(@user.picture_url)%>
      <% else %> 
        <%= image_tag('missing_pic.png', border:0)%>
      <% end %> 
    </div>

    <form action="#">
      <div class="file-field input-field">
        <div class="btn">
          <span>File</span>
          <input type="file">
        </div>

        <div class="file-path-wrapper">
          <input class="file-path validate" type="text">
        </div>
      </div>
    </form>
   

    <p class="text">


    Phone: <%= @user.phone %> 
        

    <br/>

    Email: <a href= "mailto:<%= @user.email %>"><%= @user.email %></a>

    <br/> 

    Password: *****

    </p>
   

  </div>
</div>
