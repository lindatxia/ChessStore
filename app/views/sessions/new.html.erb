<div class="container">
<div class="row">

  <div class="col s6">
    <h5 class="heading">
      Returning Customer
    </h5>

    <%= form_tag sessions_path do %>
      
    	<div class="control-group">
        <%= label_tag :email %>
        <div class="controls">
          <%= text_field_tag :email, params[:email] %>
        </div>
      </div>

    	<div class="control-group">
        <%= label_tag :password %>
        <div class="controls">
          <%= password_field_tag :password %>
        </div>
      </div>

      <div class="actions">
        <a class="waves-effect waves-light btn">
        <%= submit_tag "Log In" %>
        </a>
      </div>
    <% end %>

  </div>

  <div class="col s4">
    <h5 class="heading">New Customer</h5>
      <br/>
      <button class="waves-effect waves-light btn acc">
        <%= link_to "Create Account", signup_path%> 
        byebug
      </button>


  </div>

</div>
</div>