<div class="row">
  <div class="col s2">
  </div>
  <div class="col s10">

  <h4 class="heading"> Order No. <%= @order.id  %></h4>

  <p class="text"> 

  Items Ordered: <br/>
  	<% @order.order_items.each do |oi| %> 

  		<%= oi.item.name %> <br/>

  	<% end %>

  	<br/> 

  Total Cost: <%= number_to_currency(@order.grand_total) %> 
  <br/><br/>

  Customer: <br/> 
  	<%= @order.user.proper_name %>
  

  <br/> <br/>

  Date Ordered: <br/> 
  	<%= @order.date.strftime("%m/%d/%y") %>

	</p>
  </div>
 </div>