<%= simple_nested_form_for @order, :html => { :class => 'form-horizontal' } do |order_form| %>
  <div class="row">
    <div class="col s2">
    </div>
    <div class="col s10">
      <legend>Schools for this order</legend>
        <div id="order_schools">
          <%= order_form.simple_fields_for :school do |school_form| %>
            <%= render :partial => "school_fields", :locals => { :f => school_form } %>
          <% end %> 
          <p>
            <br /><%= order_form.link_to_add("Add School", :school, :class => 'button tiny') %>
          </p>
        </div> 

    </div>
    <div class="form-actions">
      <%= order_form.submit nil, :class => 'button radius' %>
      <%= link_to 'Cancel', orders_path, :class => 'button secondary' %>
    </div>
  </div>
<% end %>