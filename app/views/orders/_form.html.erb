<%= simple_form_for @order, :html => { :class => 'form-horizontal' } do |f| %>
  <fieldset>
  
    <legend><%= controller.action_name.capitalize %> Order </legend>

    <% if @order.errors.any? %>
    <div id="error_explanation">
      <h5 class="heading"><%= pluralize(@order.errors.count, "error") %> prohibited this order from being saved:</h5>

      <ul>
      <% @order.errors.full_messages.each do |msg| %>
        <p class="text">- <%= msg %></p>
      <% end %>
      <br/>
      </ul>
    </div>

  <% end %>



    <%= f.input :school_id, as: :select, :collection => School::SCHOOL_LIST, :prompt => true, class: 'dropdown-content' %>

    <a class="waves-effect waves-light btn" onclick="$('#school_form').show(900)">Add a New School</a>

    <br/><br/><br/>


    <div id="school_form">
    
      <%= f.input :school_name %> 
      
      <%= f.input :school_street_1 %> 

      <%= f.input :school_street_2 %> 

      <%= f.input :school_zip %> 

      <%= f.input :school_state %> 

      <%= f.input :school_city %> 
      
  </div>

      <%= f.input :credit_card_number %> 

      <%= f.input :expiration_year %> 

      <%= f.input :expiration_month %> 

    <div class="form-actions">
      <%= f.submit nil, :class => 'button radius' %>
      <%= link_to 'Cancel',orders_path, :class => 'button alert radius' %>
    </div>

  </fieldset>
<% end %>
