<br/>
<% if @orders.empty? %> 
	
	<h5 class="heading"> There are no orders at this time. </h5>

<% else %> 
	
<% @orders.each do |o| %> 
	<div class="col s12">
		<div class="card horizontal">
			<div class="card-image">
				<%= image_tag('img_not_available.png', border:0)%>
			</div>

			<div class="card-stacked">
				<div class="card-content">
					
					<h5 class="heading"> 
						Order ID: <%= o.id %>
					</h5>

					<br/>


					<div class="link text">
						<!-- For each order item in order... --> 
						<% o.order_items.each do |oi| %> 

							
							<%= link_to oi.item.name, item_path(oi.item) %> 
							<br/>
							Quantity: <%= oi.quantity%>

							<br/>
							<br/>

						<% end %>

						<br/>

						
						Grand Total: <%= number_to_currency(o.grand_total) %> <br/>
						Order Placed: <%= o.date.strftime("%m/%d/%y") %> <br/> <br/>

						<button class="waves-effect waves-light btn acc">
       


						<%= link_to 'Cancel Order', order_path(o), method: :delete %>
						    </button>
					
					</div>

				</div>

			</div>

		</div>
	</div>

	<% end %> 

<% end %>