<div class="row">
    <div class="col s2">
    </div>
    <div class="col s8">
<canvas id="myChart" width="400" height="400"></canvas>

<script>
var ctx = document.getElementById("myChart");
var myChart = new Chart(ctx, {
    type: 'bar',
    data: {
        labels: <%=raw(@item_names)%>,
        datasets: [{
            label: 'Quantity',
            data: <%=@quantity%>,
        }]
    },
    options: {
        scales: {
            yAxes: [{
                ticks: {
                    beginAtZero:true
                }
            }]
        }
    }
});
</script>

</div>
</div>
