<div class="row">
<div class="col s2">
</div>
<div class="col s3">
<ul class="collection">
  	<% @customers.each do |u| %> 
	  	
	    <li class="collection-item avatar">
	 
	 		<% if u.picture? %> 
	 			<%= image_tag(u.picture_url, :class => "circle") %>

	 		<% else %> 
	 			<%= image_tag "missing_pic.png", :class => "circle" %>
	 		<% end %> 
	       
	      <p class="collapsible-text"> 

	      	<%= u.proper_name.upcase %> <br/>
	      	<%= u.phone %> 
	      </p>
	      
	      
	      <%= link_to user_path(u.id) do %> <i class="material-icons secondary-content">info_outline</i> <% end %>
	     
	    </li>
	  	

	<% end %>
</ul>
</div>
</div>