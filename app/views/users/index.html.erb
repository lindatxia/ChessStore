<% if logged_in? && (current_user.role != "customer" || current_user.role != "shipper") %> 
<div class="row">
  <div class="col s2">
  </div>
  <div class="col s10">


  	<h4 class="heading"> All Users </h4>

  	<br/>

  	<button class="waves-effect waves-light btn acc">
        <%= link_to "Create User", new_user_path %> 
    </button>
    <br/><br/>

  	<ul class="tabs">
  		<li class="tab col s3"><a class="active" href="#employees">Employees</a></li>
  		<li class="tab col s3"><a href="#customers">Customers</a></li>    
	</ul>

	<br/>

	<div id="employees" class="col s12">
		<%= render partial: 'user_list', locals: {user: @employees} %>
	</div>

	<div id="customers" class="col s12">
		<%= render partial: 'user_list', locals: {user: @customers} %>
	</div>

  </div>
 </div>

<% end %>